<div class="text-right">
  <%= form_with model: @recipe_genre, url: admin_recipe_genres_path, method: :post do |f| %>
    <div class="form-group row ml-5">

      <%= f.label :name,"配合ジャンル名", class: "col-lg-3" %>
      <%= f.text_field :name, class: "form-control col-lg-3" %>

      <%= f.label :allergy_id, 'アレルギー' %>
      <%= f.collection_select :allergy_id, Allergy.all, :id, :name, include_blank: "選択してください", class: "col-lg-4" %>


      <div class="col-lg-3">
        <%= f.submit '新規追加',class:"btn btn-success btn-block" %>
      </div>
    </div>
  <% end %>
</div>

<div class="row justify-content-center mt-5 mb-3">
    <h3 class="mini-title">一覧</h3>
  </div>

  <div class="row text-center">
    <div class="col-lg-6 offset-3">
      <table class="table table-bordered">
        <thead class="thead-dark">
          <th>配合ジャンル名前</th>
          <th>配合ジャンル数</th>
          <th></th>
        </thead>
        <tbody>
          <% @recipe_genres.each do |recipe_genre| %>
            <tr>
              <td><%= recipe_genre.name %></td>
              <td><%= recipe_genre.recipes.count %></td>
              <td><%= link_to "編集する", edit_admin_recipe_genre_path(recipe_genre.id), class: "btn btn-success" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>