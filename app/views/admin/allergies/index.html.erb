<div class="text-right">
  <%= form_with model: @allergy, url: admin_allergies_path, method: :post do |f| %>
    <div class="form-group row ml-5">

      <%= f.label :name,"アレルギー名", class: "col-lg-3" %>
      <%= f.text_field :name, class: "form-control col-lg-3" %>

      <%= f.label :is_specific, '特定原材料7品目か？' %>
      <%= f.radio_button :is_specific, false %> <%= f.label :is_active, "いいえ", class:"mr-3" %>
      <%= f.radio_button :is_specific, true %> <%= f.label :is_active, "はい" %>

      <div class="col-lg-3">
        <%= f.submit '新規追加',class:"btn btn-success btn-block" %>
      </div>
    </div>
  <% end %>
</div>

<div class="row justify-content-center mt-5 mb-3">
    <h3 class="mini-title">一覧</h3>
  </div>

  <div class="row text-center">
    <div class="col-lg-6 offset-3">
      <table class="table table-bordered">
        <thead class="thead-dark">
          <th>アレルギー名前</th>
          <th>アレルギー数</th>
          <th></th>
        </thead>
        <tbody>
          <% @allergies.each do |allergy| %>
            <tr>
              <td><%= allergy.name %></td>
              <td><%= allergy.recipe_genres.count %></td>
              <td><%= link_to "編集する", edit_admin_allergy_path(allergy.id), class: "btn btn-success" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>