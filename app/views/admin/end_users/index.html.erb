<div class="text-right">
  <%= form_with model: @end_user, url: admin_end_users_path, method: :post do |f| %>
    <div class="form-group row ml-5">
      <%= f.label :name,"エンドユーザー名前", class: "col-lg-3" %>
      <%= f.text_field :name, class: "form-control col-lg-3" %>
      <div class="col-lg-3">
        <%= f.submit '新規追加',class:"btn btn-success btn-block" %>
      </div>
    </div>
  <% end %>
</div>

<div class="row justify-content-center mt-5 mb-3">
    <h3 class="mini-title">一覧</h3>
  </div>

  <div class="row text-center">
    <div class="col-lg-6 offset-3">
      <table class="table table-bordered">
        <thead class="thead-dark">
          <th>エンドユーザー名前</th>
          <th>エンドユーザー数</th>
          <th></th>
        </thead>
        <tbody>
          <% @end_users.each do |end_user| %>
            <tr>
              <td><%= end_user.name %></td>
              <td><%= end_user.recipes.count %></td>
              <td><%= link_to "編集する", edit_admin_end_user_path(end_user.id), class: "btn btn-success" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>