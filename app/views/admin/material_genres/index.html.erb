<div class="text-right">
  <%= form_with model: @material_genre, url: admin_material_genres_path, method: :post do |f| %>
    <div class="form-group row ml-5">

      <%= f.label :name,"原料ジャンル名", class: "col-lg-3" %>
      <%= f.text_field :name, class: "form-control col-lg-3" %>

      <div class="col-lg-3">
        <%= f.submit '新規追加',class:"btn btn-success btn-block" %>
      </div>
    </div>
  <% end %>
</div>

<div class="row justify-content-center mt-5 mb-3">
    <h3 class="mini-title">一覧</h3>
  </div>

  <div class="row text-center">
    <div class="col-lg-6 offset-3">
      <table class="table table-bordered">
        <thead class="thead-dark">
          <th>原料ジャンル名前</th>
          <th>原料数</th>
          <th></th>
        </thead>
        <tbody>
          <% @material_genres.each do |material_genre| %>
            <tr>
              <td><%= material_genre.name %></td>
              <td><%= material_genre.materials.count %></td>
              <td><%= link_to "編集する", edit_admin_material_genre_path(material_genre.id), class: "btn btn-success" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>